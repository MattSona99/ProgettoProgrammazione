<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <application
        android:allowBackup="true"
        android:dataExtractionRules="@xml/data_extraction_rules"
        android:fullBackupContent="@xml/backup_rules"
        android:icon="@drawable/logo_nav_bar"
        android:label="@string/app_name"
        android:roundIcon="@drawable/logo_nav_bar"
        android:supportsRtl="true"
        android:theme="@style/Theme.ProgettoProgrammazione"
        tools:targetApi="31">

        <activity
            android:name=".ristorante.RestaurantDetail"
            android:exported="false">
            <meta-data
                android:name="android.app.lib_name"
                android:value="" />
        </activity>
        <activity
            android:name=".activity.UserActivity"
            android:windowSoftInputMode="adjustPan" />
        <activity
            android:name=".activity.RestaurateurActivity"
            android:windowSoftInputMode="adjustPan" />
        <activity
            android:name=".activity.EmployeeActivity"
            android:windowSoftInputMode="adjustPan" />
        <activity
            android:name=".activity.IntroActivity"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

    </application>

</manifest>