<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background_splash">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:padding="10dp">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="30dp"
                    android:gravity="center"
                    android:text="Inserisci i prodotti nel menÃ¹"
                    android:textColor="@color/white"
                    android:textSize="30dp"
                    android:textStyle="bold" />


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/white_button"
                    android:orientation="vertical">


                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:orientation="horizontal"
                        android:padding="10dp">

                        <TextView
                            android:id="@+id/add_bevanda"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:gravity="center"
                            android:text="Aggiungi una bevanda"
                            android:textColor="@color/red"
                            android:textSize="28dp"
                            android:textStyle="bold" />

                        <Button
                            android:id="@+id/btn_bevanda"
                            android:layout_width="50dp"
                            android:layout_height="50dp"
                            android:layout_alignParentRight="true"
                            android:layout_marginStart="20dp"
                            android:background="@drawable/red_button"
                            android:gravity="center"
                            android:hint="+"
                            android:textColorHighlight="#E91E63"
                            android:textColorHint="@color/white"
                            android:textColorLink="#E91E63"
                            android:textSize="20sp"
                            android:textStyle="bold" />

                    </RelativeLayout>

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="2px"
                        android:background="@drawable/red_button" />

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:orientation="horizontal"
                        android:padding="10dp">

                        <TextView
                            android:id="@+id/add_antipasto"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:gravity="center"
                            android:text="Aggiungi un antipasto"
                            android:textColor="@color/red"
                            android:textSize="28dp"
                            android:textStyle="bold" />

                        <Button
                            android:id="@+id/btn_antipasto"
                            android:layout_width="50dp"
                            android:layout_height="50dp"
                            android:layout_alignParentRight="true"
                            android:layout_marginStart="20dp"
                            android:background="@drawable/red_button"
                            android:gravity="center"
                            android:hint="+"

                            android:textColorHighlight="#E91E63"
                            android:textColorHint="@color/white"
                            android:textColorLink="#E91E63"
                            android:textSize="20sp"
                            android:textStyle="bold" />

                    </RelativeLayout>

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="2px"
                        android:background="@drawable/red_button" />

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:orientation="horizontal"
                        android:padding="10dp">

                        <TextView
                            android:id="@+id/add_primo"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:gravity="center"
                            android:text="Aggiungi un primo"
                            android:textColor="@color/red"
                            android:textSize="28dp"
                            android:textStyle="bold" />

                        <Button
                            android:id="@+id/btn_primo"
                            android:layout_width="50dp"
                            android:layout_height="50dp"
                            android:layout_alignParentRight="true"
                            android:layout_marginStart="20dp"
                            android:background="@drawable/red_button"
                            android:gravity="center"
                            android:hint="+"
                            android:textColorHighlight="#E91E63"
                            android:textColorHint="@color/white"
                            android:textColorLink="#E91E63"
                            android:textSize="20sp"
                            android:textStyle="bold" />

                    </RelativeLayout>

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="2px"
                        android:background="@drawable/red_button" />

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:orientation="horizontal"
                        android:padding="10dp">

                        <TextView
                            android:id="@+id/add_secondo"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:gravity="center"
                            android:text="Aggiungi un secondo"
                            android:textColor="@color/red"
                            android:textSize="28dp"
                            android:textStyle="bold" />

                        <Button
                            android:id="@+id/btn_secondo"
                            android:layout_width="50dp"
                            android:layout_height="50dp"
                            android:layout_alignParentRight="true"
                            android:layout_marginStart="20dp"
                            android:background="@drawable/red_button"
                            android:gravity="center"
                            android:hint="+"
                            android:textColorHighlight="#E91E63"
                            android:textColorHint="@color/white"
                            android:textColorLink="#E91E63"
                            android:textSize="20sp"
                            android:textStyle="bold" />

                    </RelativeLayout>

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="2px"
                        android:background="@drawable/red_button" />

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:orientation="horizontal"
                        android:padding="10dp">

                        <TextView
                            android:id="@+id/add_contorno"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:gravity="center"
                            android:text="Aggiungi un contorno"
                            android:textColor="@color/red"
                            android:textSize="28dp"
                            android:textStyle="bold" />

                        <Button
                            android:id="@+id/btn_contorno"
                            android:layout_width="50dp"
                            android:layout_height="50dp"
                            android:layout_alignParentRight="true"
                            android:layout_marginStart="20dp"
                            android:background="@drawable/red_button"
                            android:gravity="center"
                            android:hint="+"
                            android:textColorHighlight="#E91E63"
                            android:textColorHint="@color/white"
                            android:textColorLink="#E91E63"
                            android:textSize="20sp"
                            android:textStyle="bold" />

                    </RelativeLayout>

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="2px"
                        android:background="@drawable/red_button" />

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:orientation="horizontal"
                        android:padding="10dp">

                        <TextView
                            android:id="@+id/add_dolce"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:gravity="center"
                            android:text="Aggiungi un dolce"
                            android:textColor="@color/red"
                            android:textSize="28dp"
                            android:textStyle="bold" />

                        <Button
                            android:id="@+id/btn_dolce"
                            android:layout_width="50dp"
                            android:layout_height="50dp"
                            android:layout_alignParentRight="true"
                            android:layout_marginStart="20dp"
                            android:background="@drawable/red_button"
                            android:gravity="center"
                            android:hint="+"
                            android:textColorHighlight="#E91E63"
                            android:textColorHint="@color/white"
                            android:textColorLink="#E91E63"
                            android:textSize="20sp"
                            android:textStyle="bold" />

                    </RelativeLayout>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:orientation="vertical"
                    android:padding="20dp">

                    <LinearLayout
                        android:id="@+id/constraintfine"
                        android:layout_width="200dp"
                        android:layout_height="50dp"
                        android:background="@drawable/red_button"
                        android:gravity="center">

                        <TextView
                            android:id="@+id/fine"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Fine"
                            android:textAlignment="center"
                            android:textColor="#FFFFFF"
                            android:textSize="25sp"
                            android:textStyle="bold"
                            app:layout_constraintBottom_toBottomOf="parent"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toTopOf="parent" />


                    </LinearLayout>

                </LinearLayout>


            </LinearLayout>

        </androidx.constraintlayout.widget.ConstraintLayout>

    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>