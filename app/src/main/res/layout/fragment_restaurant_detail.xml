<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background_splash_2">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <LinearLayout

                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="100dp"
                    android:gravity="center"
                    android:orientation="horizontal"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent">

                    <TextView
                        android:id="@+id/nomeRistoranteDetail"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/restaurant_name"
                        android:textColor="@color/red"
                        android:textSize="20sp"
                        android:textStyle="bold" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="5dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@drawable/white_card_red_rounded"
                        android:orientation="horizontal">

                        <androidx.cardview.widget.CardView
                            android:layout_width="150dp"
                            android:layout_height="150dp"
                            android:padding="10dp"
                            app:cardCornerRadius="8dp">

                            <ImageView
                                android:id="@+id/imgRistoranteDetail"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:layout_alignParentEnd="true"
                                android:layout_centerVertical="true"
                                android:adjustViewBounds="true"
                                android:maxWidth="180dp"
                                android:maxHeight="180dp"
                                android:minWidth="180dp"
                                android:minHeight="180dp"
                                android:scaleType="centerCrop"
                                android:src="@drawable/pencil" />
                        </androidx.cardview.widget.CardView>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:orientation="vertical"
                            android:paddingStart="10dp"
                            tools:ignore="RtlSymmetry">

                            <LinearLayout
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:orientation="horizontal">

                                <ImageView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    app:srcCompat="@android:drawable/btn_star_big_on" />

                                <TextView
                                    android:id="@+id/ratingdetail"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginVertical="5dp"
                                    android:layout_marginStart="5dp"
                                    android:text="@string/number"
                                    android:textColor="@color/red"
                                    android:textSize="20sp" />

                            </LinearLayout>

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="horizontal">

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="@string/contacts"
                                    android:textColor="@color/red"
                                    android:textSize="16sp"
                                    android:textStyle="bold" />

                                <TextView
                                    android:id="@+id/numeroDetail"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_marginStart="5dp"
                                    android:text="@string/cellphone"
                                    android:textColor="@color/red"
                                    android:textSize="14sp" />

                            </LinearLayout>

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="horizontal">

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="@string/address_details"
                                    android:textColor="@color/red"
                                    android:textSize="16sp"
                                    android:textStyle="bold" />

                                <TextView
                                    android:id="@+id/indirizzodetail"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:paddingStart="5dp"
                                    android:text="@string/address_details_value"
                                    android:textColor="@color/red"
                                    android:textSize="14sp" />

                            </LinearLayout>

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="horizontal">

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="@string/restaurant_type"
                                    android:textColor="@color/red"
                                    android:textSize="16sp"
                                    android:textStyle="bold" />

                                <TextView
                                    android:id="@+id/cucinadetail"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:paddingStart="5dp"
                                    android:text="@string/restaurant_type_value"
                                    android:textColor="@color/red"
                                    android:textSize="14sp" />

                            </LinearLayout>


                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="@string/restaurant_desc"
                                android:textColor="@color/red"
                                android:textSize="16sp"
                                android:textStyle="bold" />

                            <TextView
                                android:id="@+id/descrizioneDetail"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:text="@string/restaurant_desc_value"
                                android:textColor="@color/red"
                                android:textSize="14sp" />


                        </LinearLayout>

                    </LinearLayout>

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:layout_marginTop="10dp"
                        android:layout_marginBottom="10dp"
                        android:background="@drawable/red_button" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:orientation="horizontal"
                        android:padding="5dp">

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="vertical">

                            <RatingBar
                                android:id="@+id/ratingBarR"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:max="5"
                                android:progressBackgroundTint="@color/pink"
                                android:progressTint="@color/red"
                                android:scaleX="0.7"
                                android:scaleY="0.7" />

                            <TextView
                                android:id="@+id/rating_ristorante"
                                android:layout_width="100sp"
                                android:layout_height="22sp"
                                android:layout_gravity="center"
                                android:background="@drawable/red_button"
                                android:gravity="center"
                                android:text="@string/rate"
                                android:textColor="@color/white"
                                android:textSize="15sp"
                                android:textStyle="bold"
                                tools:ignore="RtlSymmetry" />

                        </LinearLayout>

                    </LinearLayout>

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:layout_marginTop="10dp"
                        android:layout_marginBottom="10dp"
                        android:background="@drawable/red_button" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:gravity="center"
                            android:orientation="vertical"
                            android:padding="5dp">

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="horizontal">

                                <TextView
                                    android:id="@+id/menu"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:gravity="center"
                                    android:text="@string/menu"
                                    android:textColor="@color/red"
                                    android:textSize="22sp"
                                    android:textStyle="bold" />

                                <RelativeLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:gravity="end">

                                    <TextView
                                        android:id="@+id/btn_modifica_menu"
                                        android:layout_width="80sp"
                                        android:layout_height="40sp"
                                        android:background="@drawable/red_button"
                                        android:gravity="center"
                                        android:text="@string/modify_menu"
                                        android:textColor="@color/white"
                                        android:textSize="16sp"
                                        android:textStyle="bold"
                                        android:visibility="invisible" />

                                </RelativeLayout>

                            </LinearLayout>

                            <HorizontalScrollView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content">

                                <RadioGroup
                                    android:id="@+id/radioGroupMenu"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:orientation="horizontal">

                                    <RadioButton
                                        android:id="@+id/btnBevande"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:layout_margin="15dp"
                                        android:background="@drawable/radio_selector"
                                        android:button="@android:color/transparent"
                                        android:elevation="4dp"
                                        android:padding="15dp"
                                        android:text="@string/beverages"
                                        android:textColor="@drawable/radio_text_color" />

                                    <RadioButton
                                        android:id="@+id/btnAntipasti"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:layout_margin="15dp"
                                        android:background="@drawable/radio_selector"
                                        android:button="@android:color/transparent"
                                        android:elevation="4dp"
                                        android:padding="15dp"
                                        android:text="@string/appetizers"
                                        android:textColor="@drawable/radio_text_color" />

                                    <RadioButton
                                        android:id="@+id/btnPrimi"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:layout_margin="15dp"
                                        android:background="@drawable/radio_selector"
                                        android:button="@android:color/transparent"
                                        android:elevation="4dp"
                                        android:padding="15dp"
                                        android:text="@string/firsts"
                                        android:textColor="@drawable/radio_text_color" />

                                    <RadioButton
                                        android:id="@+id/btnSecondi"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:layout_margin="15dp"
                                        android:background="@drawable/radio_selector"
                                        android:button="@android:color/transparent"
                                        android:elevation="4dp"
                                        android:padding="15dp"
                                        android:text="@string/seconds"
                                        android:textColor="@drawable/radio_text_color" />

                                    <RadioButton
                                        android:id="@+id/btnContorni"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:layout_margin="15dp"
                                        android:background="@drawable/radio_selector"
                                        android:button="@android:color/transparent"
                                        android:elevation="4dp"
                                        android:padding="15dp"
                                        android:text="@string/garnishes"
                                        android:textColor="@drawable/radio_text_color" />

                                    <RadioButton
                                        android:id="@+id/btnDolci"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:layout_margin="15dp"
                                        android:background="@drawable/radio_selector"
                                        android:button="@android:color/transparent"
                                        android:elevation="4dp"
                                        android:padding="15dp"
                                        android:text="@string/sweets"
                                        android:textColor="@drawable/radio_text_color" />

                                </RadioGroup>

                            </HorizontalScrollView>

                        </LinearLayout>

                        <LinearLayout
                            android:id="@+id/tutte_menu"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical">

                            <LinearLayout
                                android:id="@+id/bevande_menu"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="vertical"
                                android:visibility="gone">

                                <TextView
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_marginStart="10dp"
                                    android:text="@string/beverages"
                                    android:textColor="@color/red"
                                    android:textSize="20sp"
                                    android:textStyle="bold" />

                                <androidx.recyclerview.widget.RecyclerView
                                    android:id="@+id/recycleViewBevande"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    tools:listitem="@layout/product_card" />

                            </LinearLayout>

                            <LinearLayout
                                android:id="@+id/antipasti_menu"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="vertical"
                                android:visibility="gone">

                                <TextView
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_marginStart="10dp"
                                    android:text="@string/appetizers"
                                    android:textColor="@color/red"
                                    android:textSize="20sp"
                                    android:textStyle="bold" />

                                <androidx.recyclerview.widget.RecyclerView
                                    android:id="@+id/recycleViewAntipasti"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    tools:listitem="@layout/product_card" />

                            </LinearLayout>

                            <LinearLayout
                                android:id="@+id/primi_menu"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="vertical"
                                android:visibility="gone">

                                <TextView
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_marginStart="10dp"
                                    android:text="@string/firsts"
                                    android:textColor="@color/red"
                                    android:textSize="20sp"
                                    android:textStyle="bold" />

                                <androidx.recyclerview.widget.RecyclerView
                                    android:id="@+id/recycleViewPrimi"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    tools:listitem="@layout/product_card" />

                            </LinearLayout>

                            <LinearLayout
                                android:id="@+id/secondi_menu"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="vertical"
                                android:visibility="gone">

                                <TextView
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_marginStart="10dp"
                                    android:text="@string/seconds"
                                    android:textColor="@color/red"
                                    android:textSize="20sp"
                                    android:textStyle="bold" />

                                <androidx.recyclerview.widget.RecyclerView
                                    android:id="@+id/recycleViewSecondi"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    tools:listitem="@layout/product_card" />

                            </LinearLayout>

                            <LinearLayout
                                android:id="@+id/contorni_menu"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="vertical"
                                android:visibility="gone">

                                <TextView
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_marginStart="10dp"
                                    android:text="@string/garnishes"
                                    android:textColor="@color/red"
                                    android:textSize="20sp"
                                    android:textStyle="bold" />

                                <androidx.recyclerview.widget.RecyclerView
                                    android:id="@+id/recycleViewContorni"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    tools:listitem="@layout/product_card" />

                            </LinearLayout>

                            <LinearLayout
                                android:id="@+id/dolci_menu"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="vertical"
                                android:visibility="gone">

                                <TextView
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_marginStart="10dp"
                                    android:text="@string/sweets"
                                    android:textColor="@color/red"
                                    android:textSize="20sp"
                                    android:textStyle="bold" />

                                <androidx.recyclerview.widget.RecyclerView
                                    android:id="@+id/recycleViewDolci"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    tools:listitem="@layout/product_card" />

                            </LinearLayout>

                        </LinearLayout>

                    </LinearLayout>

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:layout_marginTop="10dp"
                        android:layout_marginBottom="10dp"
                        android:background="@drawable/red_button" />

                    <TextView
                        android:id="@+id/options_rest"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:text="@string/opzioni"
                        android:textColor="@color/red"
                        android:textSize="20sp"
                        android:textStyle="bold" />

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:padding="5dp">

                        <LinearLayout
                            android:id="@+id/btn_modifica_ristorante"
                            android:layout_width="100sp"
                            android:layout_height="50dp"
                            android:layout_alignParentStart="true"
                            android:layout_gravity="start"
                            android:layout_marginBottom="20dp"
                            android:background="@drawable/white_card_red_rounded"
                            android:gravity="center">

                            <TextView
                                android:id="@+id/modifica_ristorante"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="@string/edit_restaurant"
                                android:textAlignment="center"
                                android:textColor="@color/red"
                                android:textSize="16sp"
                                android:textStyle="bold" />

                        </LinearLayout>

                        <LinearLayout
                            android:id="@+id/btn_elimina_ristorante"
                            android:layout_width="100sp"
                            android:layout_height="50dp"
                            android:layout_alignParentEnd="true"
                            android:layout_gravity="end"
                            android:layout_marginBottom="20dp"
                            android:background="@drawable/white_card_red_rounded"
                            android:gravity="center">

                            <TextView
                                android:id="@+id/elimina_ristorante"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="@string/delete_restaurant"
                                android:textAlignment="center"
                                android:textColor="@color/red"
                                android:textSize="16sp"
                                android:textStyle="bold" />


                        </LinearLayout>

                    </RelativeLayout>

                </LinearLayout>

            </LinearLayout>

        </androidx.constraintlayout.widget.ConstraintLayout>

    </ScrollView>
</FrameLayout>